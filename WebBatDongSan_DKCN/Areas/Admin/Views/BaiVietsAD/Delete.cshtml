@model WebBatDongSan_DKCN.Models.BaiViet

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Xóa Bài Viết</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" class="breadcrumb-link">Quản Lý Bài Viết</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Xóa Bài Viết</li>
                        </ol>
                    </nav>
                </div>             
            </div>
            <h3> Đây là thông tin chi tiết bài viết hiện tại. Bạn có chắc chắn muốn xóa bài viết này không?</h3>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->

    <div class="row">
        <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header p-4">
                    <h4 class="mb-0">Thông Tin Bài Viết</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <!-- Tiêu Đề -->
                        <dt class="col-sm-3">Tiêu Đề:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.TieuDe)</dd>

                        <!-- Nội Dung -->
                        <dt class="col-sm-3">Nội Dung:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.NoiDung)</dd>

                        <!-- Ngày Tạo -->
                        <dt class="col-sm-3">Ngày Tạo:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTao)</dd>

                        <!-- Loại Bài Viết -->
                        <dt class="col-sm-3">Loại Bài Viết:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.IdLoaibaivietNavigation.Tenloaibaiviet)</dd>

                        <!-- Trạng Thái -->
                        <dt class="col-sm-3">Trạng Thái:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.IdTrangthaiNavigation.TenTrangthai)</dd>

                        <!-- Người Dùng -->
                        <dt class="col-sm-3">Người Đăng:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.IdUserNavigation.HoTen)</dd>
                    </dl>
                </div>
                <!-- Nút Thao Tác -->
                <div class="card-footer text-right">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdBaiviet" />
                        <button type="submit" class="btn btn-danger">Xóa Bài Viết</button>
                        <a asp-action="Index" class="btn btn-primary">Quay lại danh sách</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
