@model WebBatDongSan_DKCN.Models.LoaiTaiKhoanUser

@{
    ViewData["Title"] = "Thêm Loại Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Thêm Loại Tài Khoản</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" class="breadcrumb-link">Quản Lý Loại Tài Khoản</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Thêm Loại Tài Khoản</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->

    <div class="row">
        <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header p-4">
                    <h4 class="mb-0">Thêm Loại Tài Khoản</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="validationform" data-parsley-validate="" novalidate="">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Tên Loại Tài Khoản -->
                        <div class="form-group row">
                            <label asp-for="TenLoaitk" class="col-12 col-sm-3 col-form-label text-sm-right">Tên Loại Tài Khoản</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="TenLoaitk" class="form-control" placeholder="Nhập tên loại tài khoản" />
                                <span asp-validation-for="TenLoaitk" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Nút Thao Tác -->
                        <div class="form-group row text-right">
                            <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-3">
                                <button type="submit" class="btn btn-space btn-primary">Thêm Loại Tài Khoản</button>
                                <a asp-action="Index" class="btn btn-space btn-secondary">Quay lại danh sách</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
