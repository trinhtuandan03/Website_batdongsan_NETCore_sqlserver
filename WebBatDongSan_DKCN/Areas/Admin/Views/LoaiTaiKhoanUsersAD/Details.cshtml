@model WebBatDongSan_DKCN.Models.LoaiTaiKhoanUser

@{
    ViewData["Title"] = "Chi Tiết Loại Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Chi Tiết Loại Tài Khoản</h2>
                <p class="pageheader-text">
                    Đây là thông tin chi tiết loại tài khoản hiện tại, bao gồm tên loại tài khoản.
                </p>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" class="breadcrumb-link">Quản Lý Loại Tài Khoản</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Chi Tiết Loại Tài Khoản</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->

    <divclass ="card-body">
        <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header p-4">
                    <h4 class="mb-0">Thông Tin Loại Tài Khoản</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <!-- Tên Loại Tài Khoản -->
                        <dt class="col-sm-3">Tên Loại Tài Khoản:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.TenLoaitk)</dd>
                    </dl>
                </div>
                <!-- Nút Thao Tác -->
                <div class="card-footer text-right">
                    <a asp-action="Edit" asp-route-id="@Model.IdLoaitk" class="btn btn-primary">Sửa Loại Tài Khoản</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </divclass>
</div>
