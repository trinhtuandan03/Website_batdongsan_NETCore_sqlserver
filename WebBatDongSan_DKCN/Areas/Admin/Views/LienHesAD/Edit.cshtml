@model WebBatDongSan_DKCN.Models.LienHe

@{
    ViewData["Title"] = "Sửa Liên Hệ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Sửa Liên Hệ</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" class="breadcrumb-link">Quản Lý Liên Hệ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Sửa Liên Hệ</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->

    <div class="row">
        <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header p-4">
                    <h4 class="mb-0">Chỉnh sửa liên hệ</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <!-- Hidden field to store the ID -->
                        <input type="hidden" asp-for="IdLienHe" />

                        <!-- Tiêu Đề -->
                        <div class="form-group row">
                            <label asp-for="TieuDe" class="col-12 col-sm-3 col-form-label text-sm-right">Tiêu Đề</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="TieuDe" class="form-control" placeholder="Nhập tiêu đề liên hệ" />
                                <span asp-validation-for="TieuDe" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Nội Dung -->
                        <div class="form-group row">
                            <label asp-for="NoiDung" class="col-12 col-sm-3 col-form-label text-sm-right">Nội Dung</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <textarea asp-for="NoiDung" class="form-control" placeholder="Nhập nội dung liên hệ"></textarea>
                                <span asp-validation-for="NoiDung" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Thời Gian Gửi -->
                        <div class="form-group row">
                            <label asp-for="ThoiGianGui" class="col-12 col-sm-3 col-form-label text-sm-right">Thời Gian Gửi</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="ThoiGianGui" type="datetime-local" class="form-control" />
                                <span asp-validation-for="ThoiGianGui" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Họ Tên -->
                        <div class="form-group row">
                            <label asp-for="HoTen" class="col-12 col-sm-3 col-form-label text-sm-right">Họ Tên</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên" />
                                <span asp-validation-for="HoTen" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="form-group row">
                            <label asp-for="Email" class="col-12 col-sm-3 col-form-label text-sm-right">Email</label>
                            <div class="col-12 col-sm-8 col-lg-6">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>


                        <!-- Nút Thao Tác -->
                        <div class="form-group row text-right">
                            <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-3">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
