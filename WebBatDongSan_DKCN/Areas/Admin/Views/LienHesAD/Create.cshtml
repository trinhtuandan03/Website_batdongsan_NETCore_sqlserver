@model WebBatDongSan_DKCN.Models.LienHe

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h2 class="card-header">Thêm Liên Hệ</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="breadcrumb-link">Quản Lý Liên Hệ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm Liên Hệ</li>
        </ol>
        <div class="card-body">
            <form asp-action="Create" id="validationform" data-parsley-validate="" novalidate="">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Tiêu Đề -->
                <div class="form-group row">
                    <label asp-for="TieuDe" class="col-12 col-sm-3 col-form-label text-sm-right">Tiêu Đề</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <input asp-for="TieuDe" class="form-control" placeholder="Nhập tiêu đề liên hệ" />
                        <span asp-validation-for="TieuDe" class="text-danger"></span>
                    </div>
                </div>

                <!-- Nội Dung -->
                <div class="form-group row">
                    <label asp-for="NoiDung" class="col-12 col-sm-3 col-form-label text-sm-right">Nội Dung</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <textarea asp-for="NoiDung" class="form-control" placeholder="Nhập nội dung liên hệ"></textarea>
                        <span asp-validation-for="NoiDung" class="text-danger"></span>
                    </div>
                </div>

                <!-- Thời Gian Gửi -->
                <div class="form-group row">
                    <label asp-for="ThoiGianGui" class="col-12 col-sm-3 col-form-label text-sm-right">Thời Gian Gửi</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <input asp-for="ThoiGianGui" type="datetime-local" class="form-control" />
                        <span asp-validation-for="ThoiGianGui" class="text-danger"></span>
                    </div>
                </div>

                <!-- Họ Tên -->
                <div class="form-group row">
                    <label asp-for="HoTen" class="col-12 col-sm-3 col-form-label text-sm-right">Họ Tên</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên người liên hệ" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>
                </div>

                <!-- Email -->
                <div class="form-group row">
                    <label asp-for="Email" class="col-12 col-sm-3 col-form-label text-sm-right">Email</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <input asp-for="Email" class="form-control" placeholder="Nhập email người liên hệ" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- Người Dùng -->
                <div class="form-group row">
                    <label asp-for="IdUser" class="col-12 col-sm-3 col-form-label text-sm-right">Người Dùng</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <select asp-for="IdUser" class="form-control" asp-items="ViewBag.IdUser"></select>
                        <span asp-validation-for="IdUser" class="text-danger"></span>
                    </div>
                </div>

                <!-- Nút Thao Tác -->
                <div class="form-group row text-right">
                    <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-3">
                        <button type="submit" class="btn btn-space btn-primary">Thêm Liên Hệ</button>
                        <a asp-action="Index" class="btn btn-space btn-secondary">Quay lại danh sách</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
