@model WebBatDongSan_DKCN.Models.BinhLuan

@{
    ViewData["Title"] = "Thêm Bình Luận";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h2 class="card-header">Thêm Bình Luận</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="breadcrumb-link">Quản Lý Bình Luận</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm Bình Luận</li>
        </ol>
        <div class="card-body">
            <form asp-action="Create" id="validationform" data-parsley-validate="" novalidate="">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nội Dung -->
                <div class="form-group row">
                    <label asp-for="NoiDung" class="col-12 col-sm-3 col-form-label text-sm-right">Nội Dung</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <textarea asp-for="NoiDung" class="form-control" placeholder="Nhập nội dung bình luận"></textarea>
                        <span asp-validation-for="NoiDung" class="text-danger"></span>
                    </div>
                </div>

                <!-- Ngày Tạo -->
                <div class="form-group row">
                    <label asp-for="NgayTao" class="col-12 col-sm-3 col-form-label text-sm-right">Ngày Tạo</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <input asp-for="NgayTao" type="datetime-local" class="form-control" />
                        <span asp-validation-for="NgayTao" class="text-danger"></span>
                    </div>
                </div>

                <!-- Bài Viết -->
                <div class="form-group row">
                    <label asp-for="IdBaiviet" class="col-12 col-sm-3 col-form-label text-sm-right">Bài Viết</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <select asp-for="IdBaiviet" class="form-control" asp-items="ViewBag.IdBaiviet"></select>
                        <span asp-validation-for="IdBaiviet" class="text-danger"></span>
                    </div>
                </div>

                <!-- Sản Phẩm -->
                <div class="form-group row">
                    <label asp-for="IdSanpham" class="col-12 col-sm-3 col-form-label text-sm-right">Sản Phẩm</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <select asp-for="IdSanpham" class="form-control" asp-items="ViewBag.IdSanpham"></select>
                        <span asp-validation-for="IdSanpham" class="text-danger"></span>
                    </div>
                </div>

                <!-- Người Dùng -->
                <div class="form-group row">
                    <label asp-for="IdUser" class="col-12 col-sm-3 col-form-label text-sm-right">Người Dùng</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <select asp-for="IdUser" class="form-control" asp-items="ViewBag.IdUser"></select>
                        <span asp-validation-for="IdUser" class="text-danger"></span>
                    </div>
                </div>

                <!-- Nút Thao Tác -->
                <div class="form-group row text-right">
                    <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-3">
                        <button type="submit" class="btn btn-space btn-primary">Thêm Bình Luận</button>
                        <a asp-action="Index" class="btn btn-space btn-secondary">Quay lại danh sách</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
