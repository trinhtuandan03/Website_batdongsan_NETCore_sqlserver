@model WebBatDongSan_DKCN.Models.GiayToTaiLieu

@{
    ViewData["Title"] = "Thêm Giấy Tờ Tài Liệu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h2 class="card-header">Thêm Giấy Tờ Tài Liệu</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="breadcrumb-link">Quản Lý Giấy Tờ Tài Liệu</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm Giấy Tờ Tài Liệu</li>
        </ol>
        <div class="card-body">
            <form asp-action="Create" id="validationform" data-parsley-validate="" novalidate="">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Tên Giấy Tờ -->
                <div class="form-group row">
                    <label asp-for="TenGiaytoTailieu" class="col-12 col-sm-3 col-form-label text-sm-right">Tên Giấy Tờ</label>
                    <div class="col-12 col-sm-8 col-lg-6">
                        <input asp-for="TenGiaytoTailieu" class="form-control" placeholder="Nhập tên giấy tờ tài liệu" />
                        <span asp-validation-for="TenGiaytoTailieu" class="text-danger"></span>
                    </div>
                </div>

                <!-- Nút Thao Tác -->
                <div class="form-group row text-right">
                    <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-3">
                        <button type="submit" class="btn btn-space btn-primary">Thêm Giấy Tờ</button>
                        <a asp-action="Index" class="btn btn-space btn-secondary">Quay lại danh sách</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
