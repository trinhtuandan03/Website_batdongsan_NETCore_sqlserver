@model WebBatDongSan_DKCN.ViewModels.BaiVietsViewModels

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sub-banner">
    <div class="container">
        <div class="breadcrumb-area">
            <h1>Thêm Bài Viết</h1>
            <ul class="breadcrumbs">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li class="active">Thêm Bài Viết</li>
            </ul>
        </div>
    </div>
</div>



<!-- User page start -->
<div class="user-page submit-property content-area-7">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="notification-box mb-50">
                    <h4>Bạn Đã có Bài Viết Thú Vị Để Chia sẻ cho mọi người nhé</h4>
                    <P>Nếu Bạn Chưa có Tài Khoản Đăng Bài Hãy Đến Trang Đang lý Tài Khoản Để Đang bài Nhé</P>
                </div>
                <!-- Hiển thị Thông Báo -->
                @if (TempData["ThongBao"] != null)
                {
                    <div class="alert alert-info" role="alert">
                        @TempData["ThongBao"]
                    </div>
                }
                <div class="search-area contact-2">
                    <div class="search-area-inner">
                        <div class="search-contents ">
                            <form asp-action="ThemBaiViet" asp-controller="BaiViet" method="POST" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <h3 class="heading-3">Thêm Bài Viết</h3>
                                <div class="row mb-30">
                                    <div class="col-lg-12">
                                        <div class="form-group message">
                                            <label asp-for="ThemBaiViet.TieuDe" class="control-label">Tiêu Đề Bài Viết</label>
                                            <input asp-for="ThemBaiViet.TieuDe" class="form-control" />
                                            <span asp-validation-for="ThemBaiViet.TieuDe" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group message">
                                            <label asp-for="ThemBaiViet.NoiDung" class="control-label">Nội Dung bài Viết</label>
                                            <textarea asp-for="ThemBaiViet.NoiDung" class="form-control"></textarea>
                                            <span asp-validation-for="ThemBaiViet.NoiDung" class="text-danger"></span>
                                            <i class="flaticon-mail-2"></i>
                                        </div>
                                    </div>                                
                                </div>   
                                <h3 class="heading-3">Thông tin Bắt Buộc </h3>
                                <div class="row mb-30">                                   
                                    <div class="col-lg-4 col-md-6">
                                        <div class="form-group">
                                            <label>Loại Bài Viết</label>
                                            <select asp-for="SelectedLoaiBaiViet" class="selectpicker search-fields" name="SelectedLoaiBaiViet">
                                                <option value="">--------------------------- Tất Cả -------------------</option>
                                                @foreach (var loaiTinBaiViet in Model.loaiBaiViets)
                                                {
                                                    <option value="@loaiTinBaiViet.IdLoaibaiviet">@loaiTinBaiViet.Tenloaibaiviet</option>
                                                }
                                            </select>
                                            <span asp-validation-for="SelectedLoaiBaiViet" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-4">Thêm Bài Viết</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- User page end -->
