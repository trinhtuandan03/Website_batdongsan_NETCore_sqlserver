@model WebBatDongSan_DKCN.ViewModels.DSBaiVietSanPhamViewModels

<div class="sub-banner">
    <div class="container">
        <div class="breadcrumb-area">
            <h1>Trang Danh sách sản phẩm</h1>
            <ul class="breadcrumbs">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li class="active">Trang Danh sách sản phẩm</li>
            </ul>
        </div>
    </div>
</div>

<div class="contact-2 content-area-2">
    <div class="container">
        <div class="col-lg-12">
            <a href="/DSBaiVietSanPham/DanhSachBaiVietUser" class="btn btn-4">Danh Sách Bài Viết User</a>
        </div>
        <div class="table-section mb-50">
            <h3 class="heading-3">
                @if (TempData["ThongBao"] != null)
                {
                    @TempData["ThongBao"]
                }
                else
                {
                    <h3 class="heading-3">Danh sách sản phẩm Của Người Dùng</h3>
                }
            </h3>
            <table class="table table-bordered mb-0">
                <thead class="bg-active">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tiêu Đề</th>
                        <th scope="col">Mô Tả</th>
                        <th scope="col">Giá</th>
                        <th scope="col">Diện Tích</th>
                        <th scope="col">Ngày Đăng</th>
                        <th scope="col">Địa Chỉ</th>
                        <th scope="col">Hình Ảnh 1</th>
                        <th scope="col">Hình Ảnh 2</th>
                        <th scope="col">Hình Ảnh 3</th>
                        <th scope="col">Hình Ảnh 4</th>
                        <th scope="col">Hình Ảnh 5</th>
                        <th scope="col">Tình Trạng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.SanPhams.Any())
                    {
                        int index = 1;
                        foreach (var sanPham in Model.SanPhams)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@sanPham.TieuDeSanpham</td>
                                <td>@sanPham.MoTaSanpham</td>
                                <td>@string.Format("{0:C}", sanPham.GiaSanPham)</td>
                                <td>@sanPham.DienTich m²</td>
                                <td>@sanPham.NgayDang?.ToString("dd/MM/yyyy")</td>
                                <td>@sanPham.DiaChi</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(sanPham.Img1))
                                    {
                                        <img src="~/images/sanpham/@sanPham.Img1" alt="Image 1" class="img-thumbnail" />
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(sanPham.Img2))
                                    {
                                        <img src="~/images/sanpham/@sanPham.Img2" alt="Image 2" class="img-thumbnail" />
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(sanPham.Img3))
                                    {
                                        <img src="~/images/sanpham/@sanPham.Img3" alt="Image 3" class="img-thumbnail" />
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(sanPham.Img4))
                                    {
                                        <img src="~/images/sanpham/@sanPham.Img4" alt="Image 4" class="img-thumbnail" />
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(sanPham.Img5))
                                    {
                                        <img src="~/images/sanpham/@sanPham.Img5" alt="Image 5" class="img-thumbnail" />
                                    }
                                </td>
                                <td>@sanPham.IdTrangthaiNavigation?.TenTrangthai</td> <!-- Assuming TenTrangThai exists -->
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>