@model WebBatDongSan_DKCN.ViewModels.DSBaiVietSanPhamViewModels

<div class="sub-banner">
    <div class="container">
        <div class="breadcrumb-area">
            <h1>Trang Danh sách bài viết User</h1>
            <ul class="breadcrumbs">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li class="active">Trang Danh sách bài viết User</li>
            </ul>
        </div>
    </div>
</div>

<div class="contact-2 content-area-2">
    <div class="container">
        <div class="col-lg-12">
            <a href="/DSBaiVietSanPham/DanhSachSanPhamUser" class="btn btn-4">Danh Sách Sản Phẩm User</a>
        </div>
        <div class="table-section mb-50">
            <h3 class="heading-3">
                @if (TempData["ThongBao"] != null)
                {
                    @TempData["ThongBao"]
                }
                else
                {
                    <h3 class="heading-3">Danh sách bài viết Của Người Dùng</h3>
                }
            </h3>
            <table class="table table-bordered mb-0">
                <thead class="bg-active">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tiêu Đề</th>
                        <th scope="col">Nội Dung</th>
                        <th scope="col">Ngày Tạo</th>
                        <th scope="col">Loại Bài Viết</th>
                        <th scope="col">Trạng Thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.BaiViets.Any())
                    {
                        int index = 1;
                        foreach (var baiViet in Model.BaiViets)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@baiViet.TieuDe</td>
                                <td>@baiViet.NoiDung</td>
                                <td>@baiViet.NgayTao?.ToString("dd/MM/yyyy")</td>
                                <td>@baiViet.IdLoaibaivietNavigation?.Tenloaibaiviet</td> <!-- Assuming TenLoaiBaiViet exists -->
                                <td>@baiViet.IdTrangthaiNavigation?.TenTrangthai</td> <!-- Assuming TenTrangThai exists -->
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>